<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/mwBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/mw_background"
        android:scaleType="fitXY"
        />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mwOuterBorder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mw_outer_border"
        android:padding="@dimen/mw_outer_border"
        android:orientation="vertical">

        <include layout="@layout/mw_decor"/>
        <include layout="@layout/screen_simple_overlay_action_mode"/>
    </LinearLayout>
</FrameLayout>
