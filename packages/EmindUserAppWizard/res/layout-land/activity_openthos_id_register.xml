<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
       <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/controls_space"
        android:layout_marginBottom="10.0dip">
        <WebView
            android:id="@+id/webview_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30.0dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/webview_register">
        <Button
            android:textSize="@dimen/button_text_size"
            android:textColor="@color/button_text_color"
            android:gravity="center"
            android:id="@+id/button_cancel"
            android:background="@drawable/selector_button_bg1"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:layout_marginRight="120.0dip"
            android:text="@string/str_cancel" />
        <Button
            android:textSize="@dimen/button_text_size"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:id="@+id/button_register_finish"
            android:background="@drawable/selector_button_bg2"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:text="@string/str_finish" />
    </LinearLayout>
</RelativeLayout>
