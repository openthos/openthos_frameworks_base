<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_layout"
    android:background="#99000000"
    android:orientation="vertical" >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="@dimen/px240"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/px15" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/px15"
                android:orientation="vertical" >

            <TextView
                style="@style/Mstyle"
                android:text="@string/common_application" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <ListView
                android:id="@+id/lv_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px450"
                android:layout_marginLeft="10dp"
                android:divider="#00000000"
                android:dividerHeight="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical" >

            <TextView
                android:id="@+id/my_computer"
                style="@style/Mstyle"
                android:drawableLeft="@drawable/startup_menuicon_computer"
                android:text="@string/my_computer" />

            <TextView
                android:id="@+id/system_setting"
                style="@style/Mstyle"
                android:drawableLeft="@drawable/startup_menuicon_setting"
                android:text="@string/system_setting" />

            <TextView
                android:onClick="powerOff"
                style="@style/Mstyle"
                android:drawableLeft="@drawable/startup_menuicon_power"
                android:text="@string/power_off" />
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:src="#808080" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <EditText
                    android:id="@+id/et_text"
                    android:imeOptions="actionSend"
                    android:layout_width="@dimen/px500"
                    android:layout_height="@dimen/px60"
                    android:background="@drawable/search_background"
                    android:paddingLeft="10dp"
                    android:hint="please input"
                    android:maxLength="10"
                    android:minLines="1"
                    android:textCursorDrawable="@null"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:id="@+id/iv_view"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/search" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/name_sort"
                    style="@style/Mstyle"
                    android:text="@string/name_sort" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/time_sort"
                    style="@style/Mstyle"
                    android:text="@string/time_sort" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/type_sort"
                    style="@style/Mstyle"
                    android:text="@string/type_sort" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/click_sort"
                    style="@style/Mstyle"
                    android:text="@string/click_sort" />

            </LinearLayout>

            <GridView
                android:layout_marginTop="10dp"
                android:id="@+id/gv_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="6"
                android:verticalSpacing="10dip"
                android:horizontalSpacing="10dip" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
