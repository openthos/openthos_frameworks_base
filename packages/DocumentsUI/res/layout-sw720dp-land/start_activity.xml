<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_layout"
    android:background="#000000"
    android:orientation="vertical" >



    <LinearLayout
        android:layout_width="@dimen/px495"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="@dimen/px150"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:layout_marginBottom="@dimen/px15"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/my_computer"
                style="@style/Mstyle"
                android:drawableLeft="@drawable/startup_menuicon_computer"
                android:text="@string/my_computer" />

            <TextView
                android:id="@+id/system_setting"
                style="@style/Mstyle"
                android:drawableLeft="@drawable/startup_menuicon_setting"
                android:text="@string/system_setting"/>

            <TextView
                android:onClick="powerOff"
                style="@style/Mstyle"
                android:drawableLeft="@drawable/startup_menuicon_power"
                android:text="@string/power_off" />
        </LinearLayout>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:src="#808080"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <GridView
                android:id="@+id/gv_view"
                android:layout_width="@dimen/px340"
                android:layout_height="wrap_content"
                android:numColumns="4"
                android:verticalSpacing="3dip"
                android:horizontalSpacing="3dip" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
