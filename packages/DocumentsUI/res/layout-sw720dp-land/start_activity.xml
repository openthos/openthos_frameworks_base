<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_layout"
    android:background="#99000000"
    android:orientation="vertical" >



    <LinearLayout
        android:layout_width="@dimen/px495"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/px150"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:layout_marginBottom="@dimen/px15"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/my_computer"
                style="@style/Mstyle"
                android:drawableLeft="@drawable/startup_menuicon_computer"
                android:text="@string/my_computer" />

            <TextView
                android:id="@+id/system_setting"
                style="@style/Mstyle"
                android:drawableLeft="@drawable/startup_menuicon_setting"
                android:text="@string/system_setting"/>

            <TextView
                android:onClick="powerOff"
                style="@style/Mstyle"
                android:drawableLeft="@drawable/startup_menuicon_power"
                android:text="@string/power_off" />
        </LinearLayout>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:src="#808080"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:layout_width="@dimen/px280"
                    android:layout_height="wrap_content"
                    android:background="@drawable/search_background"
                    android:paddingLeft="10dp"
                    android:hint="please input"
                    android:textCursorDrawable="@null"
                    android:textColor="@android:color/white"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/search"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/name_sort"
                    style="@style/Mstyle"
                    android:text="@string/name_sort"/>

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/time_sort"
                    style="@style/Mstyle"
                    android:text="@string/time_sort"/>

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/frequency_sort"
                    style="@style/Mstyle"
                    android:text="@string/frequency_sort"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/Mstyle"
                    android:text="@string/system_loading"/>
            </LinearLayout>

            <GridView
                android:layout_marginTop="10dp"
                android:id="@+id/gv_view"
                android:layout_width="@dimen/px340"
                android:layout_height="wrap_content"
                android:numColumns="4"
                android:verticalSpacing="3dip"
                android:horizontalSpacing="3dip" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
