<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_layout"
    android:background="#e9edf0"
    android:orientation="vertical" >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="@dimen/px180"
            android:layout_height="match_parent"
            android:background="#5a41a2" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/px16"
                android:paddingLeft="@dimen/px24"
                android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/px40"
                android:textSize="@dimen/px16"
                android:text="@string/common_application" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <ListView
                android:id="@+id/lv_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px450"
                android:divider="#00000000"
                android:dividerHeight="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical" >

            <TextView
                android:id="@+id/my_computer"
                style="@style/Mstyle"
                android:drawableLeft="@drawable/startup_menuicon_computer"
                android:text="@string/my_computer" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px16" />

            <TextView
                android:id="@+id/system_setting"
                style="@style/Mstyle"
                android:drawableLeft="@drawable/startup_menuicon_setting"
                android:text="@string/system_setting" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px16" />

            <TextView
                android:onClick="powerOff"
                style="@style/Mstyle"
                android:drawableLeft="@drawable/startup_menuicon_power"
                android:layout_marginBottom="10dp"
                android:text="@string/power_off" />
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:src="#808080" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!--
               android:background="@drawable/search_background"
            -->
            <RelativeLayout
                android:layout_marginTop="@dimen/px16"
                android:layout_marginLeft="@dimen/px32"
                android:layout_marginRight="@dimen/px32"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px58"
                android:background="#ffffff" >

                <EditText
                    style="?android:attr/textViewStyle"
                    android:id="@+id/et_text"
                    android:imeOptions="actionSend"
                    android:layout_width="@dimen/px336"
                    android:layout_height="@dimen/px58"
                    android:paddingLeft="16dp"
                    android:hint="Software search"
                    android:textSize="@dimen/px16"
                    android:maxLength="10"
                    android:minLines="1"
                    android:textCursorDrawable="@null"
                    android:background="#ffffff"
                    android:textColor="#939aa3" />

                <ImageView
                    android:id="@+id/iv_view"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="@dimen/px34"
                    android:layout_height="@dimen/px34"
                    android:layout_marginRight="8dp"
                    android:layout_toRightOf="@id/et_text"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_starter_search" />

                <View
                    android:id="@+id/line_view"
                    android:layout_toRightOf="@id/iv_view"
                    android:layout_width="@dimen/px12"
                    android:layout_height="match_parent"
                    android:background="#e9edf0" />

               <ImageView
                    android:id="@+id/iv_arrow_gray"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="@dimen/px34"
                    android:layout_height="@dimen/px34"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/line_view"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_starter_down_arrow_gray" />

               <TextView
                    android:id="@+id/tv_sort_show"
                    android:onClick="SortShow"
                    android:layout_width="@dimen/px100"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_arrow_gray"
                    android:layout_centerVertical="true"
                    android:text="@string/click_sort"
                    android:textColor="#939aa3"
                    android:textSize="@dimen/px24"  />

                <ImageView
                    android:id="@+id/iv_arrow_white"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="@dimen/px58"
                    android:layout_height="@dimen/px58"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_starter_top_arrow_white"
                    android:background="#e9edf0" />


            </RelativeLayout>

            <!-- android:verticalSpacing="10dip"
                android:horizontalSpacing="10dip"  -->
            <GridView
                android:layout_marginTop="@dimen/px16"
                android:id="@+id/gv_view"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="4" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
