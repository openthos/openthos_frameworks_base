<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/px124"
    android:layout_height="@dimen/px88"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/package_image"
        android:layout_width="@dimen/px68"
        android:layout_height="@dimen/px68"
        android:layout_gravity="center"
        android:src="@drawable/ic_launcher"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px16" />

    <TextView
        android:id="@+id/package_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px20"
        android:layout_gravity="center"
	android:singleLine="true"
	android:ellipsize="end"
        android:textSize="@dimen/px18"
        android:textColor="#000000"
        android:text="@string/startup_menu_app"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px32" />

</LinearLayout>
