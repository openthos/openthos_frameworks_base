<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_layout"
    android:background="#000000"
    android:orientation="vertical" >



    <LinearLayout
        android:layout_width="@dimen/px1300"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="@dimen/px282"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:layout_marginBottom="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/my_computer"
                style="@style/Mstyle"
                android:drawableLeft="@drawable/startup_menuicon_computer"
                android:text="@string/startup_menu_my_computer" />

            <TextView
                android:id="@+id/system_setting"
                style="@style/Mstyle"
                android:drawableLeft="@drawable/startup_menuicon_setting"
                android:text="@string/startup_menu_system_settings" />

            <TextView
                android:id="@+id/power_off"
                style="@style/Mstyle"
                android:drawableLeft="@drawable/startup_menuicon_power"
                android:drawableRight="@drawable/startup_dotrightpushed_s"
                android:text="@string/startup_menu_shutdown" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <GridView
                android:id="@+id/gv_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numColumns="3"
                android:verticalSpacing="5dip"
                android:horizontalSpacing="5dip" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
