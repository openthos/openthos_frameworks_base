<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/startupmenu_layout_size_eighty_eight"
    android:layout_height="@dimen/startupmenu_layout_size_on_hundred_and_four"
    android:paddingTop="@dimen/startupmenu_layout_size_twelve"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/package_image"
        android:layout_width="@dimen/startupmenu_layout_size_forty_eight"
        android:layout_height="@dimen/startupmenu_layout_size_forty_eight"
        android:layout_gravity="center"
        android:src="@drawable/ic_launcher"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/startupmenu_layout_size_eight" />

    <TextView
        android:id="@+id/package_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/startupmenu_text_size_fourteen"
        android:textColor="#000000"
        android:text="@string/startup_menu_app"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/startupmenu_layout_size_twenty_four" />

</LinearLayout>
