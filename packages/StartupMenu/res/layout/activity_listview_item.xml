<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/startupmenu_layout_size_forty_eight"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/startupmenu_layout_size_eight"
        android:paddingLeft="@dimen/startupmenu_layout_size_sixteen"
        android:paddingTop="@dimen/startupmenu_layout_size_eight">

        <ImageView
            android:id="@+id/package_image"
            android:layout_width="@dimen/startupmenu_layout_size_thirty_two"
            android:layout_height="@dimen/startupmenu_layout_size_thirty_two"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher"/>

        <View
            android:layout_width="@dimen/startupmenu_layout_size_twelve"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/package_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/startup_menu_app"
            android:textColor="#ffffff"
            android:textSize="@dimen/startupmenu_text_size_fourteen"/>
    </LinearLayout>
</LinearLayout>
