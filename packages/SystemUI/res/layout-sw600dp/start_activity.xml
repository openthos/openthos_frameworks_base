<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical" >


   
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:orientation="vertical" >

            <TextView
                style="@style/Mstyle"
                android:drawableLeft="@drawable/startup_menuicon_computer"
                android:text="我的电脑" />

            <TextView
                style="@style/Mstyle"
                android:drawableLeft="@drawable/startup_menuicon_safe"
                android:text="安全中心" />

            <TextView
                style="@style/Mstyle"
                android:drawableLeft="@drawable/startup_menuicon_help"
                android:text="帮助与反馈" />

            <TextView
                style="@style/Mstyle"
                android:drawableLeft="@drawable/startup_menuicon_setting"
                android:text="系统设置" />

            <TextView
                style="@style/Mstyle"
                android:drawableLeft="@drawable/ic_sysbar_recent_land"
                android:text="转到平板模式" />

            <TextView
                android:id="@+id/shoutdown_view"
                style="@style/Mstyle"
                android:drawableLeft="@drawable/startup_menuicon_power"
                android:text="关机" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <GridView
                android:id="@+id/gv_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numColumns="3"
                android:verticalSpacing="5dip"
                android:horizontalSpacing="5dip" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>