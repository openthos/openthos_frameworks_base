<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_layout"
    android:background="@android:color/black"
    android:orientation="vertical" >



    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:orientation="vertical" >

            <TextView
                style="@style/Mstyle"
                android:drawableLeft="@drawable/startup_menuicon_computer"
                android:text="@string/startup_menu_my_computer" />

            <TextView
                style="@style/Mstyle"
                android:drawableLeft="@drawable/startup_menuicon_safe"
                android:text="@string/startup_menu_security_center" />

            <TextView
                style="@style/Mstyle"
                android:drawableLeft="@drawable/startup_menuicon_help"
                android:text="@string/startup_menu_help_feedback" />

            <TextView
                style="@style/Mstyle"
                android:drawableLeft="@drawable/startup_menuicon_setting"
                android:text="@string/startup_menu_system_settings" />

            <TextView
                style="@style/Mstyle"
                android:drawableLeft="@drawable/ic_sysbar_recent_land"
                android:text="@string/startup_menu_to_pad" />

            <TextView
                android:id="@+id/shoutdown_view"
                style="@style/Mstyle"
                android:drawableLeft="@drawable/startup_menuicon_power"
                android:text="@string/startup_menu_shutdown" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <GridView
                android:id="@+id/gv_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numColumns="3"
                android:verticalSpacing="5dip"
                android:horizontalSpacing="5dip" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
