<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".CalendarDialog"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:id="@+id/content_calendar"
        android:layout_width="336dp"
        android:layout_height="@dimen/standard_height"
        android:layout_centerInParent="true"
        android:background="@color/calendar_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="111dp"
            android:paddingLeft="19dp"
            android:paddingRight="19dp">

            <TextView
                android:id="@+id/current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:textColor="@color/calendar_text"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/current_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/current_time"
                android:textColor="@color/calendar_text_light"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/current_meridiem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="22dp"
                android:layout_toRightOf="@id/current_time"
                android:textColor="@color/calendar_text"
                android:textSize="18sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/config"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="19dp"
                android:src="@mipmap/ic_settings" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:background="@color/calendar_divier" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="374dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <ImageView
                    android:id="@+id/pre_month"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_back" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/calendar_text"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/next_moonth"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_go" />

            </RelativeLayout>

            <GridView
                android:id="@+id/calendar_title"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="7dp"
                android:listSelector="@android:color/transparent"
                android:numColumns="7" />

            <GridView
                android:id="@+id/calendar_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="19dp"
                android:listSelector="@android:color/transparent"
                android:numColumns="7"
                android:scrollbars="none" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:background="@color/calendar_divier" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp">

            <FrameLayout
                android:id="@+id/notice_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/button"
                    android:layout_width="191dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@color/calendar_button"
                    android:gravity="center"
                    android:text="添加事项"
                    android:textColor="@color/calendar_text"
                    android:textSize="18sp" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/notice_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/notice_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="事项日期: 2019/3/6 星期三"
                        android:textColor="@color/add_notice_date"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/cancel"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="end"
                        android:layout_marginTop="13dp"
                        android:src="@mipmap/ic_close" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:background="#66ffffff"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/notice_message"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="9dp"
                        android:layout_marginRight="9dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="添加事项详情"
                        android:singleLine="true"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="12dp"
                        android:background="#10000000" />

                    <ImageView
                        android:id="@+id/current_color"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="1dp"
                        android:src="@drawable/red"></ImageView>

                    <ImageView
                        android:id="@+id/change_color"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/ic_pull_down" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"

                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="167dp"
                        android:layout_height="wrap_content"
                        android:background="#66ffffff"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/notice_time"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="9dp"
                            android:layout_marginRight="9dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="XX:XX"
                            android:singleLine="true"
                            android:textSize="18sp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="12dp"
                            android:background="#10000000" />

                        <TextView
                            android:id="@+id/notice_meridiem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="1dp"
                            android:text="AM"
                            android:textColor="@color/black"
                            android:drawableLeft="@drawable/spot" />

                        <ImageView
                            android:id="@+id/change_meridiem"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/ic_pull_down" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/commit_notice"
                        android:layout_marginLeft="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="#0D000000"
                        android:text="确定"
                        android:textColor="@color/black"
                        android:gravity="center" />
                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>