<?xml version="1.0" encoding="utf-8"?>
<com.android.systemui.statusbar.notificationbars.WifiContentView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/wifi_content_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/systemui_size_thirty"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wifi_content_is_cnted"
            android:layout_width="@dimen/systemui_size_twentyfour"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@android:drawable/checkbox_off_background"/>

        <TextView
            android:id="@+id/wifi_content_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/systemui_size_five"
            android:layout_weight="1"
            android:focusable="false"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/systemui_textsize_twelve"/>

        <ImageView
            android:id="@+id/wifi_has_psw"
            android:layout_width="@dimen/systemui_size_sixteen"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/wifi_content_level"
            android:layout_width="@dimen/systemui_size_sixteen"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/systemui_size_five"
            android:layout_marginRight="@dimen/systemui_size_five"
            android:focusable="false"
            />
    </LinearLayout>
</com.android.systemui.statusbar.notificationbars.WifiContentView>
