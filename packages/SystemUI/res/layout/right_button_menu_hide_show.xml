<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rightMenuFocus"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/status_bar_bottom_two">

    <TextView
        android:id="@+id/rbm_hide"
        style="@style/Mstyle"
        android:text="@string/status_bar_info_hide"
        android:paddingBottom="@dimen/status_bar_bottom_two"/>

    <TextView
        android:id="@+id/rbm_show"
        style="@style/Mstyle"
        android:text="@string/status_bar_info_show"
        android:paddingBottom="@dimen/status_bar_bottom_two"/>
</LinearLayout>
