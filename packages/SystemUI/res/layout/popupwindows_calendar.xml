<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="296dp"
    android:layout_height="wrap_content"
    android:background="#342464"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/calendar_time"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:textSize="24sp"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/calendar_date"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:textSize="12sp"
            android:textColor="#ffffff"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"/>

    <LinearLayout
        android:id="@+id/ll_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="#3f2d76" >

            <RelativeLayout
                android:id="@+id/popupwindow_calendar_last_month"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true">
                <TextView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/calendar_left" />
            </RelativeLayout>

            <TextView
                android:id="@+id/popupwindow_calendar_month"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:background="#3f2d76"
                android:textSize="12sp"
                android:textColor="#ffffff"/>

            <RelativeLayout
                android:id="@+id/popupwindow_calendar_next_month"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:layout_centerVertical="true">
                <TextView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/calendar_right" />
            </RelativeLayout>

        </RelativeLayout>

        <com.android.systemui.statusbar.notificationbars.CalendarView
            android:id="@+id/popupwindow_calendar"
            android:layout_width="224dp"
            android:layout_height="144dp"
            android:background="#3f2d76" >
        </com.android.systemui.statusbar.notificationbars.CalendarView>

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"/>
        <TextView
            android:id="@+id/popupwindow_calendar_bt_enter"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="@string/set_date_and_time"
            android:textColor="#ffffff"
            android:layout_marginBottom="8dp"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>
