<com.android.systemui.statusbar.ExpandableNotificationRow
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    >

    <com.android.systemui.statusbar.NotificationBackgroundView
        android:id="@+id/backgroundNormal"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.android.systemui.statusbar.NotificationBackgroundView
        android:id="@+id/backgroundDimmed"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.android.systemui.statusbar.NotificationContentView android:id="@+id/expanded"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />

    <com.android.systemui.statusbar.NotificationContentView android:id="@+id/expandedPublic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/veto"
        android:layout_width="@dimen/systemui_size_fortyeight"
        android:layout_height="@dimen/systemui_size_zero"
        android:gravity="end"
        android:layout_marginEnd="@dimen/systemui_size_subeighty"
        android:background="@null"
        android:paddingEnd="@dimen/systemui_size_eight"
        android:paddingStart="@dimen/systemui_size_eight"
        />

    <ViewStub
        android:layout="@layout/notification_guts"
        android:id="@+id/notification_guts_stub"
        android:inflatedId="@+id/notification_guts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <ImageButton
        android:layout_width="@dimen/systemui_size_sixteen"
        android:layout_height="@dimen/systemui_size_sixteen"
        android:id="@+id/delete_notification"
        android:layout_marginRight="@dimen/systemui_size_ten"
        android:layout_marginBottom="@dimen/systemui_size_ten"
        android:layout_gravity="bottom|end"
        android:background="@drawable/notification_clearall_icon" />

</com.android.systemui.statusbar.ExpandableNotificationRow>
