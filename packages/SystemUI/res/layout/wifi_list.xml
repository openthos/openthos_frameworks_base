<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#342464"
    android:orientation="vertical"
    android:paddingLeft="@dimen/systemui_size_sixteen"
    android:paddingRight="@dimen/systemui_size_sixteen"
    android:paddingTop="@dimen/systemui_size_eight"
    android:paddingBottom="@dimen/systemui_size_eight"
    android:showDividers="middle">

    <LinearLayout
        android:id="@+id/net_list_container"
        android:layout_width="@dimen/net_dialog_width"
        android:layout_height="@dimen/systemui_size_fourhundred"
        android:orientation="vertical"
        android:scrollbars="vertical">
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:paddingLeft="@dimen/systemui_padding_thirty"
        android:layout_height="@dimen/systemui_size_fifty">
        <TextView
            android:id="@+id/wifi_enable"
            android:layout_gravity="center"
            android:text="@string/wifi_enable"
            android:textSize="@dimen/systemui_textsize_twelve"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Switch
            android:id="@+id/wifi_enable_btn"
            android:layout_gravity="right|center_vertical"
            android:layout_width="@dimen/systemui_size_hundred"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ethernet_set_dg_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:text="@string/status_bar_ethernet"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/systemui_textsize_twelve"
            android:paddingLeft="@dimen/systemui_padding_thirty"
            android:paddingBottom="@dimen/systemui_padding_five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
