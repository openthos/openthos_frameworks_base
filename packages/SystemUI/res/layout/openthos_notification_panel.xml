<?xml version="1.0" encoding="utf-8"?>
<com.android.systemui.statusbar.phone.OpenthosNotificationView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notification_container_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="@integer/notification_panel_layout_gravity"
    android:background="@color/minimize_dock_shadow_end"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <!-- start of notification panel -->
    <LinearLayout
        android:id="@+id/notification_sub_panel"
        android:layout_width="@dimen/notification_panel_width"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/openthos_notification_stack"
            android:layout_width="@dimen/notification_panel_width"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.android.systemui.statusbar.stack.NotificationStackScrollLayout
                android:id="@+id/notification_stack_scroller"
                android:layout_width="match_parent"
                android:layout_height="469dp"
                android:importantForAccessibility="no"/>
            <FrameLayout
                android:id="@+id/notification_dismiss_containorn"
                android:layout_width="match_parent"
                android:layout_height="58dp" >
                <TextView
                    android:id="@+id/dismiss_text"
                    android:layout_width="208dp"
                    android:layout_height="@dimen/qs_icon_size_thirty"
                    android:text="@string/clear_all"
                    android:textSize="@dimen/notification_text_size"
                    android:textColor="@color/notification_text_color"
                    android:gravity="center"
                    android:background="@color/qs_user_detail_icon_muted"
                    android:layout_marginLeft="@dimen/notification_menu_icon_size"
                    android:layout_marginRight="@dimen/notification_menu_icon_size"
                    android:layout_marginTop="@dimen/notification_margin"
                    android:layout_marginBottom="@dimen/notification_margin" />
                <ImageView
                    android:id="@+id/notification_settings"
                    android:src="@drawable/notification_settings"
                    android:layout_width="@dimen/qs_icon_size_thirty"
                    android:layout_height="@dimen/qs_icon_size_thirty"
                    android:layout_marginLeft="291dp"
                    android:layout_marginRight="@dimen/notification_margin"
                    android:layout_marginTop="@dimen/notification_margin"
                    android:layout_marginBottom="@dimen/notification_margin" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</com.android.systemui.statusbar.phone.OpenthosNotificationView>
