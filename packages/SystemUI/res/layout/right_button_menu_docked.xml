<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rightMenuFocus"
    android:orientation="vertical"
    android:paddingBottom="@dimen/systemui_size_five">

    <TextView
        android:id="@+id/rbm_open"
        style="@style/Mstyle"
        android:text="@string/status_bar_open"/>

    <TextView
        android:id="@+id/rbm_undock"
        style="@style/Mstyle"
        android:text="@string/status_bar_undock"/>

    <TextView
        android:id="@+id/rbm_phone_mode"
        style="@style/Mstyle"
        android:text="@string/status_bar_phone_mode"/>


    <TextView
        android:id="@+id/rbm_pc_mode"
        style="@style/Mstyle"
        android:text="@string/status_bar_pc_mode"/>

</LinearLayout>
