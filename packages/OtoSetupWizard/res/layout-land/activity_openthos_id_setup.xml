<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/firstboot_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="800dp"
        android:layout_height="550dp"
        android:layout_gravity="center"
        android:gravity ="center_vertical"
        android:orientation="vertical">
        <include
            android:id="@+id/title"
            layout="@layout/common_title"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:background="#259b24"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="600dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:textColor="#ffffff"
                    android:textSize="28sp"
                    android:paddingLeft="76dp"
                    android:paddingTop="20dp"
                    android:text="@string/verify_openthos_title"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:paddingLeft="72dp"
                    android:paddingBottom="13dp"
                    android:text="@string/verify_openthos_summary"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="132dp"
                    android:layout_height="32dp"
                    android:id="@+id/tv_register"
                    android:text="@string/str_register"
                    android:textSize="12sp"
                    android:textColor="#259b24"
                    android:background="@drawable/selector_button_bg"
                    android:gravity="center"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginBottom="32dp"
                    android:layout_marginLeft="36dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="361dp"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <Button
                android:id="@+id/change_url"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="16dp"
                android:padding="5dp"
                android:text="@string/change_url"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">
                <TextView
                    style="@style/common_textview_style"
                    android:text="@string/openthos_id_name"/>
                <TextView
                    android:layout_width="76dp"
                    android:layout_height="match_parent" />
                <EditText
                    android:id="@+id/edittext_openthos_id"
                    style="@style/common_editview_style"
                    android:inputType="textNoSuggestions"
                    android:maxLength="128" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal">
                <TextView
                    style="@style/common_textview_style"
                    android:text="@string/openthos_id_password"/>
                <TextView
                    android:layout_width="76dp"
                    android:layout_height="match_parent" />
                <EditText
                    android:id="@+id/edittext_openthos_password"
                    style="@style/common_editview_style"
                    android:inputType="textPassword"
                    android:maxLength="128"/>

            </LinearLayout>

        </LinearLayout>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#888888"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_prev"
                style="@style/common_button_style"
                android:textColor="#888888"
                android:text="@string/str_prev"
                android:layout_marginLeft="16dp"/>
            <TextView
                android:id="@+id/tv_skip"
                android:text="@string/str_skip"
                android:textColor="#444444"
                android:layout_marginRight="16dp"
                style="@style/common_button_style"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/tv_verify"
                android:text="@string/str_verify"
                android:textColor="#259b24"
                style="@style/common_button_style"
                android:layout_toLeftOf="@+id/tv_skip"/>

        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
