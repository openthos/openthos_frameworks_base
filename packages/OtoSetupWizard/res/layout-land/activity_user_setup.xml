<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <ImageView
        android:id="@+id/view_header"
        android:background="@drawable/header3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text_title_device"
        android:textSize="@dimen/title_text_size"
        android:textColor="#ffaaaaaa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_username_password"
        android:layout_below="@+id/view_header"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/controls_space"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/text_title_device"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linearlayout_computer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/controls_space"
        android:layout_marginBottom="30.0dip"
        android:layout_centerInParent="true">
        <TextView
            android:textSize="@dimen/button_text_size"
            android:textColor="#ffaaaaaa"
            android:id="@+id/textview_computer"
            android:layout_width="270dip"
            android:layout_height="wrap_content"
            android:text="@string/str_computer"
            android:gravity="left"/>
        <EditText
            android:textSize="22.0sp"
            android:id="@+id/edittext_computer_name"
            android:background="@drawable/spinner_popup_bg"
            android:layout_width="270.0dip"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:selectAllOnFocus="true"
            android:inputType="textNoSuggestions"
            android:imeOptions="actionDone" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linearlayout_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/linearlayout_computer"
        android:layout_marginBottom="30.0dip">
        <TextView
            android:textSize="@dimen/button_text_size"
            android:textColor="#ffaaaaaa"
            android:layout_width="270dip"
            android:layout_height="wrap_content"
            android:text="@string/str_username"
            android:gravity="left"/>
        <EditText
            android:textSize="22.0sp"
            android:id="@+id/edittext_username"
            android:background="@drawable/spinner_popup_bg"
            android:layout_width="270.0dip"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:selectAllOnFocus="true"
            android:inputType="textNoSuggestions"
            android:imeOptions="actionDone" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linearlayout_screen_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/linearlayout_user"
        android:layout_marginBottom="30.0dip">
        <TextView
            android:textSize="@dimen/button_text_size"
            android:textColor="#ffaaaaaa"
            android:layout_width="270dip"
            android:layout_height="wrap_content"
            android:text="@string/str_screen_password"
            android:gravity="left"/>
        <EditText
            android:textSize="22.0sp"
            android:id="@+id/edittext_screen_password"
            android:background="@drawable/spinner_popup_bg"
            android:layout_width="270.0dip"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:selectAllOnFocus="true"
            android:inputType="textPassword"
            android:imeOptions="actionDone" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linearlayout_screen_password_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/linearlayout_screen_password"
        android:layout_marginBottom="30.0dip">
        <TextView
            android:textSize="@dimen/button_text_size"
            android:textColor="#ffaaaaaa"
            android:layout_width="270dip"
            android:layout_height="wrap_content"
            android:text="@string/str_screen_password_confirm"
            android:gravity="left"/>
        <EditText
            android:textSize="22.0sp"
            android:id="@+id/edittext_screen_password_confirm"
            android:background="@drawable/spinner_popup_bg"
            android:layout_width="270.0dip"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:selectAllOnFocus="true"
            android:inputType="textPassword"
            android:imeOptions="actionDone" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30.0dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <Button
            android:textSize="@dimen/button_text_size"
            android:textColor="@color/button_text_color"
            android:gravity="center"
            android:id="@+id/button_prev"
            android:background="@drawable/selector_button_bg1"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:layout_marginRight="120.0dip"
            android:text="@string/str_prev" />
        <Button
            android:textSize="@dimen/button_text_size"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:id="@+id/button_finish"
            android:background="@drawable/selector_button_bg2"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:text="@string/str_finish" />
        <TextView
            android:id="@+id/text_skip"
            android:textSize="@dimen/button_text_size"
            android:textColor="#000000"
            android:layout_width="270dip"
            android:layout_height="wrap_content"
            android:text="@string/str_skip"
            android:gravity="right"
            android:layout_alignParentRight="true"/>
    </LinearLayout>
</RelativeLayout>
