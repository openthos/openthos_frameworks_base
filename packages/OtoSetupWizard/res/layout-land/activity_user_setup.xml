<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/firstboot_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="800dp"
        android:layout_height="550dp"
        android:layout_gravity="center"
        android:gravity ="center_vertical"
        android:orientation="vertical">
        <include
            android:id="@+id/title"
            layout="@layout/common_title"/>

        <TextView
            style="@style/common_main_title_style"
            android:text="@string/setup_device_setting"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="393dp"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">
                <TextView
                    style="@style/common_textview_style"
                    android:text="@string/str_computer"/>
                <TextView
                    android:layout_width="72dp"
                    android:layout_height="match_parent"/>
                <EditText
                    android:id="@+id/edittext_computer_name"
                    style="@style/common_editview_style"
                    android:inputType="textNoSuggestions"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal">
                <TextView
                    style="@style/common_textview_style"
                    android:text="@string/str_username"/>
                <TextView
                    android:layout_width="72dp"
                    android:layout_height="match_parent" />
                <EditText
                    android:id="@+id/edittext_username"
                    style="@style/common_editview_style"
                    android:inputType="textNoSuggestions"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal">
                <TextView
                    style="@style/common_textview_style"
                    android:text="@string/str_screen_password"/>
                <TextView
                    android:layout_width="72dp"
                    android:layout_height="match_parent" />
                <EditText
                    android:id="@+id/edittext_screen_password"
                    style="@style/common_editview_style"
                    android:inputType="textPassword"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal">
                <TextView
                    style="@style/common_textview_style"
                    android:text="@string/str_screen_password_confirm"/>
                <TextView
                    android:layout_width="72dp"
                    android:layout_height="match_parent" />
                <EditText
                    android:id="@+id/edittext_screen_password_confirm"
                    style="@style/common_editview_style"
                    android:inputType="textPassword"/>
            </LinearLayout>
        </LinearLayout>
         <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#888888"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_prev"
                android:text="@string/str_prev"
                android:textColor="#888888"
                style="@style/common_button_style"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:id="@+id/tv_skip"
                android:textColor="#444444"
                android:text="@string/str_skip"
                style="@style/common_button_style"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true" />

            <TextView
                android:id="@+id/tv_finish"
                android:text="@string/setup_next"
                android:textColor="#259b24"
                style="@style/common_button_style"
                android:layout_toLeftOf="@+id/tv_skip"/>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
