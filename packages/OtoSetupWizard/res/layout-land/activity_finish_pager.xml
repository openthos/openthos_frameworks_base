<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
        android:background="@android:color/white"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/view_finish"
            android:background="@drawable/icon_finish"
            android:layout_width="120dip"
            android:layout_height="120dip"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/controls_space1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/view_finish"/>
        <TextView
            android:id="@+id/text_title_finish"
            android:textSize="@dimen/title_finish_size"
            android:textColor="#ffaaaaaa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_openthos_finish"
            android:layout_below="@+id/controls_space1"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/controls_space2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/text_title_finish"/>
        <Button
            android:textSize="@dimen/button_text_size"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:id="@+id/button_start_use"
            android:background="@drawable/selector_button_bg2"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:text="@string/str_start_use"
            android:layout_centerInParent="true"
            android:layout_below="@+id/controls_space2"/>
        </RelativeLayout>

</RelativeLayout>