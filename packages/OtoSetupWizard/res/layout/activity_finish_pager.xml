<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/firstboot_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <ImageView
        android:id="@+id/view_finish"
        android:src="@drawable/firstboot_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"/>
    <TextView
        android:id="@+id/text_title_finish"
        android:textSize="28sp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_openthos_finish"
        android:layout_below="@+id/view_finish"
        android:paddingTop="20dp"
        android:paddingBottom="52dp"
        android:background="#00000000"
        android:layout_centerHorizontal="true" />

    <Button
        android:textSize="14sp"
        android:layout_gravity="center"
        android:id="@+id/button_start_use"
        android:textColor="#ffffff"
        android:layout_width="96dp"
        android:layout_height="48dp"
        android:text="@string/str_start_use"
        android:layout_below="@+id/text_title_finish"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>

