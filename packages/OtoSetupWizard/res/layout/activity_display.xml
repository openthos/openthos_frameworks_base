<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/firstboot_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="800dp"
        android:layout_height="550dp"
        android:layout_gravity="center"
        android:gravity ="center_vertical"
        android:orientation="vertical">
        <include
            android:id="@+id/title"
            layout="@layout/common_title"/>

        <TextView
            style="@style/common_main_title_style"
            android:text="@string/display_setting"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="393dp"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_dpi_low"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textColor="#444444"
                android:textSize="14sp"
                android:paddingLeft="72dp"
                android:gravity ="center_vertical"
                android:layout_marginTop="16dp"
                android:background="@drawable/selector_item_color"
                android:text="@string/dpi_low"/>
            <TextView
                android:id="@+id/tv_dpi_medium"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textColor="#444444"
                android:textSize="14sp"
                android:paddingLeft="72dp"
                android:gravity ="center_vertical"
                android:background="@drawable/selector_item_color"
                android:text="@string/dpi_medium"/>
            <TextView
                android:id="@+id/tv_dpi_high"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textColor="#444444"
                android:textSize="14sp"
                android:paddingLeft="72dp"
                android:gravity ="center_vertical"
                android:background="@drawable/selector_item_color"
                android:text="@string/dpi_high"/>

        </LinearLayout>
         <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#888888"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_prev"
                android:text="@string/str_prev"
                android:textColor="#888888"
                style="@style/common_button_style"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:id="@+id/tv_next"
                android:textColor="#444444"
                android:text="@string/str_next"
                style="@style/common_button_style"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
